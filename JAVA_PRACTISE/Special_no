
public class Special_no {
	public static void main(String[] args) {
	int[] arr = {4,6,8,33,57,24,87,12,9,122};
	int  num=24;
	int flag=0, index=-1;
	
		for(int i=0; i<=arr.length-1; i++) {
			if (arr[i] == num) {
				flag=1;
				index=i;
				break;
			}
		}
		if(flag==1) {
			System.out.println("we have the required no");
			System.out.println("Number is at position "+ index);
		}
		else {
			System.out.println("we dont have the required no");
		}
}
}               